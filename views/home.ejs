<%- include("partials/header.ejs") %>

  <!-- Overlay When Open Navigation Bar -->
  <div id="bodyOverlay"> </div>

  <!-- Menu Button for Mobile -->
  <span class="material-icons" id="menuToggle">menu_open</span>

  <!-- Title -->
  <div id="sidebarMenu">
    <div class="today">
      <h1 class="mb-0"">
        <%=homeTitle%>
      </h1>
      <p class=" mb-1">
        <%=date%>
          </p>
    </div>
  </div>

  <!-- Content -->
  <div class="page-content p-4 " id="content">
    <div class="content">
      <%newTaskItem.forEach((task)=>{%>
        <div class="items">
          <form action="/delete" method="post">
            <input onChange="this.form.submit()" type="checkbox" value="<%=task._id%>" name="checkedItem">
            <p class="mb-0">
              <%=task.name%>
            </p>
            <input value="<%= homeTitle%>" name="listName" type="hidden">
          </form>
        </div>
        <%});%>
    </div>
  </div>
  <%- include("task.ejs") %>
    <%- include("partials/footer.ejs") %>