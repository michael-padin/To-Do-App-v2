<%- include("partials/header.ejs") %>

  <!-- Overlay When Open Navigation Bar -->
  <div id="bodyOverlay"> </div>

  <!-- Menu Button for Mobile -->
  <div class="button-menu" id="menuToggle">
    <input type="checkbox" />
    <span></span>
    <span></span>
    <span></span>
  </div>

  <!-- Title -->
  <div id="sidebarMenu" class="px-4">
    <div class="today mb-2 ">
      <h1 class="mb-0"">
        <%=homeTitle%>
      </h1>
      <p class=" mb-1">
        <%=date%>
          </p>
    </div>
  </div>

  <!-- Content -->
  <div class="page-content p-4 " id="content">
    <div class="content">
      <%newTaskItem.forEach((task)=>{%>
        <form action="/delete" method="post">
          <div class="items">
            <input onChange="this.form.submit()" type="checkbox" value="<%=task._id%>" name="checkedItem">
            <p class="mb-0">
              <%=task.name%>
            </p>
          </div>
            <input value="<%= homeTitle%>" name="listName" type="hidden">
        </form>
        <%});%>
    </div>
  </div>
  <%- include("task.ejs") %>
    <%- include("partials/footer.ejs") %>