<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To Do List</title>

    <!-- font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
        integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous" />

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

    <!-- Google fonts & icons -->
    <link
        href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp"
        rel="stylesheet">

    <!-- local stylesheet -->
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="icon" href="data:,">

</head>
<header>

    <!-- Vertical navbar -->
    <div class="vertical-nav" id="sidebar">
        <div class="py-4 px-3 mr-3 mb-0 bg-light">
            <div class="media d-flex align-items-center">
                <i class="fas fa-check ps-2"></i>
                <div class="media-body ms-3">
                    <h2 class="mb-0">To Do List</h2>
                </div>
            </div>
        </div>

        <ul class="nav flex-column mb-0">
            <li class="nav-item">
                <a href="/" class="nav-link text-dark">
                    <i class="nav-icon material-icons-outlined">
                        today
                    </i>
                    <p>
                        Today
                    </p>
                </a>
            </li>
            <li class="nav-item">
                <a href="/important" class="nav-link text-dark">
                    <i class="nav-icon material-icons-outlined">
                        star_rate
                    </i>
                    <p>
                        Important
                    </p>
                </a>
            </li>
            <li class="nav-item">
                <a href="/tasks" class="nav-link text-dark">
                    <i class=" nav-icon material-icons-outlined">
                        home
                    </i>
                    <p>
                        Tasks
                    </p>
                </a>
            </li>

            <!-- Separator -->
            <div class="nav-separator"></div>

            <!-- Created List -->
            <li class="nav-item">
                <%lists.forEach((list)=> {%>
                <form action="/deleteList" method="post">
                    <a href="/lists/<%=list.name%>" class="nav-link text-dark" id="lists">
                        <span class="nav-icon material-icons-outlined">delete_outline</span>
                        <input onChange="this.form.submit()" type="checkbox" value="<%=list._id%>" name="checkedList"
                            id="checkbox" class="checkbox">
                        <p class="mb-0 lists">
                            <%if(list.name.length > 14) {%>
                            <%=list.name.substring(0, 14) + "..."%>
                            <%} else {%>
                            <%=list.name%>
                            <%}%>
                        </p>
                    </a>
                </form>
                <% });%>
            </li>
            <!-- Add New List -->
            <li class=" newList">
                <form action="/lists" method="POST" class="list-form">
                    <input type="hidden" value="List">
                    <button type="submit" class="nav-btn p-0" id="listBtn">
                        <i class="list-btn material-icons-round ">add</i>
                    </button>
                    <input class="new-list p-0" type="text" name="newList" id="listInput" placeholder="New List"
                        autocomplete="off" />
                </form>
            </li>
        </ul>
    </div>
</header>

<div class="cute">